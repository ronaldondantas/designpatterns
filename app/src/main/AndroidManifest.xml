<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.nadod.designpatterns">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".abstractfactory.AbstractFactoryActivity"
            android:label="Abstract Factory" />
        <activity
            android:name=".memento.MementoActivity"
            android:label="Memento" />
        <activity android:name=".mediator.MediatorActivity" />
        <activity android:name=".builder.BuilderActivity"></activity>
    </application>

</manifest>