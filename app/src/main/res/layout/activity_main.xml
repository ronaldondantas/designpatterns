<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.nadod.designpatterns.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/abstractFactoryBut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abstract Factory"/>

        <Button
            android:id="@+id/mementoBut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memento"/>

        <Button
            android:id="@+id/mediatorBut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mediator"/>

        <Button
            android:id="@+id/builderBut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Builder"/>

        <Button
            android:id="@+id/iteratorBut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iterator"/>
    </LinearLayout>

</RelativeLayout>
